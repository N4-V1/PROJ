<%= form_for(@juan, :url=>{:action => 'update'}) do |f| %>

<% if @juan.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(@juan.errors.count, "error")%>
            found: 
        </h2>
        <p>Oops! Update unsuccessful </p>
        <ul>
        <% @juan.errors.full_messages.each do |message| %>
            <li class="_error"><%= message %></li>
        <% end %>
        </ul>   
    </div>
<% end %>
	
    <div>
	<h3> User Information: </h3>
	<%= f.label :First_Name %> <%= f.text_field :fname, :value => @juan.fname %> <br><br>
	<%= f.label :Last_Name %> <%= f.text_field :lname, :value => @juan.lname %> <br><br>
	<%= f.label :address %> <%= f.text_field :address, :value => @juan.address%> <br><br>
    <%= f.label :Contact %> <%= f.text_field :contact, :value => @juan.contact%> <br><br>
   
	<%= f.submit "Update Profile" %>
	</div>
<% end %>
