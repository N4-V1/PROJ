<%= form_for(@runner, :url=>{:action => 'update'}) do |f| %>

<% if @runner.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(@runner.errors.count, "error")%>
            found: 
        </h2>
        <p>Oops! Update unsuccessful </p>
        <ul>
        <% @runner.errors.full_messages.each do |message| %>
            <li class="_error"><%= message %></li>
        <% end %>
        </ul>   
    </div>
<% end %>
	
    <div>
	<h3> User Information: </h3>
	<%= f.label :First_Name %> <%= f.text_field :fname, :value => @runner.fname %> <br><br>
	<%= f.label :Last_Name %> <%= f.text_field :lname, :value => @runner.lname %> <br><br>
	<%= f.label :Address %> <%= f.text_field :address, :value => @runner.address%> <br><br>
    <%= f.label :Contact %> <%= f.text_field :contact, :value => @runner.contact%> <br><br>
    <%= f.label :skill %> <%= f.select :skill, [ 'General','Cleaning', 'Cooking', 'Gardening', 'Repairing', 'Electrical', 'Plumbing' ]%> <br>
   
   <p> Available? </p>
   Yes <%= f.radio_button :isAvailable, true %>
   No <%= f.radio_button :isAvailable, false %>

	<%= f.submit "Update Profile" %>
	</div>
<% end %>
